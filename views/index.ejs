<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOW ALL CHATS</title>
    <link rel="stylesheet" href="style.css"/>
</head>
<body>
    <h2>ALL CHATS</h2>
    <form method="GET" action="/chats/new">
        <button>NEW CHAT</button>
    </form>

    <% for(let chat of chats) { %>
        <div class="chat">
            <p>From:<i></i><%= chat.from %></i></p>
            <div class="msg">
            <p><%= chat.msg %></p>
            <form method="GET"  action="/chats/<%= chat._id %>/edit">
              <button>EDIT</button>
            </form>
            <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                <button>DELETE</button>
            </form>
            </div>
            <p>Received By : <i><%= chat.to %> </i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join("_") %></p>
        </div>
        <br><br>
        <%}%>
</body>
</html>